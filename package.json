{
  "name": "@geduramc/copy-element",
  "private": false,
  "version": "1.0.5",
  "description": "Copy to clipboard element",
  "keywords": [
    "copy",
    "clipboard"
  ],
  "author": "geduramc",
  "homepage": "https://github.com/geduramc/copy-element#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/geduramc/copy-element"
  },
  "type": "module",
  "main": "./lib/copy-element.cjs",
  "module": "./lib/copy-element.js",
  "exports": {
    ".": {
      "import": "./lib/copy-element.js",
      "require": "./lib/copy-element.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "tsc && vite build && cp -r ./dist ./lib",
    "preview": "vite preview"
  },
  "devDependencies": {
    "ts-standard": "^12.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-floating-promises": "off"
    }
  }
}
